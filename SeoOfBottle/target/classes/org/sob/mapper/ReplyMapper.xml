<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="org.sob.mapper.ReplyMapper">
  
	  <!-- 리플관련. -->
	  
	  <insert id="boastInsertReply"><!-- 리플 boastdb에 등록 -->
	  	insert into boast (`groupid`,`reply`) values(#{groupId},#{reply})
	  </insert>
  	  <!-- 리플 가져오기. -->
  	  <select id="readReply" resultType="org.sob.domain.ReplyVO"><!-- 리플보기 -->
	  	select * from boast where groupId = #{groupId } order by rno desc;
	  </select>
  
  
    
	  
	  
	  
  </mapper>